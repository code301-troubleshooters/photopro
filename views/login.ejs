<%- include('./components/header') %>


<main>
    <section class="regist-form-section">
        <div class="row">
            <div class='section-icons'>
                <img src="./images/login.png" alt="">
            </div>
            <div class="section-title">
                <h3>
                    Sign in
                </h3>
            </div>
            <% if(messages.success_msg){ %>
            <ul class="successful-reg">
                <li><%= messages.success_msg %></li>
            </ul>
            <% } %>
            <div class="regist-form">
                <form method="POST" action="/login">
                    <div class="form-input">  <input type="email" placeholder="Email" required name="email"></div>
                    <div class="form-input"> <input type="password" placeholder="Password" required name="password"></div>
                    
                    <% if(messages.error){ %>
                    <ul>
                        <li><%= messages.error %></li>
                    </ul>
                    <% } %>
                    <div class="form-input"><input class="btn" type="submit" value="Submit"></div>
                </form>

            </div>
</main>
<%- include('./components/footer') %>